<div class="row">
    <div class="col-auto">
    <h2 class="has-text-white">Hi, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="has-text-white">Let's get Posting!</h3>

        <article class="media">
         PROFILE PICTURE
            <figure class="media-left">
                <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
            </figure>
        

        <!-- TEXT AREA -->
            <div class="media-content">
                <div class="field">
                    <p class="control">
                        <textarea class="textarea" placeholder="What's on your mind...?"></textarea>
                    </p>
                </div>
                <span id="uploadPhoto"></span>
                <nav class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <a class="button is-info" id="save-post">Post</a>
                        </div>
                        <button id="upload_widget">Upload Photo</button>    
                    </div>



                </nav>
                
            </div>
        </article>
    </div>
