
<div class="container has-text-centered">
  <div class="column is-half is-offset-one-quarter">


    <section class="section is-small">
      <div class="box">
      
        <h2 class="title font">Hi, <span id="username">{{username}}</span>! </h2>

            <div class="title has-text-grey is-2">Let's get Posting!</div>
      
      </div>
    </section>
    
  </div> 
</div>

<div class="container has-text-centered">
  <div class="column is-three-fifths is-offset-one-fifth">

    <div class="box">
        <article class="media">
          <figure class="media-left">
            <p class="image is-64x64">
              <img src="pfp.jpg">
            </p>
          </figure>
          <div class="media-content">
            <form class="form post-form">
              <div class="form-group">
                <textarea class="textarea is-danger" type="text" id="post-description" rows="15" placeholder="Spill The Tea . . . "></textarea>
              </div>
              <div class="form-group">
                <button class="button" type="submit" id="postBtn">Post</button>
                <button id="upload_widget">Upload Photo</button>    
              </div>
            </form>
          </div>
        </article>  
    </div>
  </div>
</div>


   


