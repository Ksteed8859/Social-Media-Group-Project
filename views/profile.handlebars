<div class="row">
    <div class="col-auto">
    <h2 class="has-text-white">Hi, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3 class="has-text-white">Let's get Posting!</h3>

        <article class="media">
         PROFILE PICTURE
            <figure class="media-left">
                <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/128x128.png">
                </p>
            </figure>
        

        <!-- TEXT AREA -->
            <div class="media-content">
                <div class="field">
                    <p class="control">
                        <textarea class="textarea" placeholder="What's on your mind...?"></textarea>
                    </p>
                </div>
                <nav class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <a class="button is-info" id="save-post">Post</a>
                        </div>
                        
                        <script type="text/javascript">  
                        var myWidget = cloudinary.createUploadWidget({
                        cloudName: 'dbxgwfodo', 
                        uploadPreset: 'of5kcle0',
                        folder: 't-party-photos'}, (error, result) => { 
                            if (!error && result && result.event === "success") { 
                            console.log('Done! Here is the image info: ', result.info); 
                            }
                        }
                        )

                        document.getElementById("upload_widget").addEventListener("click", function(){
                            myWidget.open();
                        }, false);
                        </script>    
                    </div>
                    <button id="upload_widget">Upload Photo</button>
                    <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  


                </nav>
                
            </div>
        </article>
    </div>
