<div class="container has-text-centered">
  <div class="column is-half is-offset-one-quarter">


    <div class="box">
      <section class="section is-small">
        <img src="TPartyLogo.png" alt='TParty'/>
        <h2 class="title"><span class="T">T</span><span class="Party">PARTY</span></h2>

            <div class="title has-text-grey is-5">We're so glad you're here!</div>
      </section>
    </div>

    
  </div> 
</div>

<div class="row">

    <div class="column is-6">

      <div class="box" id="loginAccount">
          <h1 class="font">Log In</h1>
        
        <form class="form login-form">
            <div class="form-group">
              <label for="email-login">Email:</label>
              <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="form-group">
              <label for="password-login">Password:</label>
              <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
              <button class="button" type="submit" id="loginBtn">Login</button>
            </div>
        </form>
      </div>
    </div>

    <div class="column is-6">

      <div class="box" id="createAccount">
        <h1 class="font">Create a New Account</h1>
        
        <form class="form signup-form">
          <div class="form-group">
            <label for="name-signup">Full Name:</label>
            <input class="form-input" type="text" id="name-signup" />
          </div>
          <div class="form-group">
            <label for="email-signup">Email:</label>
            <input class="form-input" type="text" id="email-signup" />
          </div>
          <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-input" type="text" id="username-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" type="password" id="password-signup" />
          </div>
          <div class="form-group">
            <button class="button" type="submit" id="SignUpBtn">Sign Up</button>
          </div>
        </form>
      </div>

    </div>
</div>

<script src="./js/login.js"></script>